

<div class="container mt-5">
  <div class="d-flex justify-content between align-items-center mb-4">
    <h1>Dog Rental Selection</h1>
    <%= link_to edit_listing_path(@listing.id), class: 'btn btn-light btn-sm border' do %>
      <i class="fa fa-pencil"></i> Book this dog
<% end %>
</div>

<div class="card" style="width: 18rem;">
<img class="card-img-top" <%= cl_image_tag @listing.photo.key, height: 300, width: 400, crop: :fill %>
<div class="card-body">
<h5 class="card-title"><%= @listing.description %></h5>
</div>


  <hr>
  <%= link_to listings_path do %>
    <i class="fa-solid fa-arrow-rotate-left"></i> Back to Feed
  <% end %>
</div>
